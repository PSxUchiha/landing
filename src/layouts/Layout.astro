---
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
  image?: string;
};

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${title} | ${SITE.TITLE}`}
      description={description}
      image={image}
    />
  </head>
  <body>
    <slot name="before-header" />
    <div
      id="anchor-main-flow"
      class="box-border flex h-fit min-h-screen flex-col font-sans antialiased"
    >
      <Header />
      <div class="w-full h-4 md:border-x border-border max-w-screen-md mx-auto"></div>
      <main class="flex-grow">
        <slot />
      </main>
      <div class="w-full h-4 md:border-x border-border max-w-screen-md mx-auto"></div>
      <Footer />
    </div>
  </body>
</html>
